      })

      // Validar correo electr칩nico
      if (email.value.trim() === "" || !validateEmail(email.value)) {
        document.getElementById("email-error").textContent =
          t.errorEmail || "Por favor, ingresa un correo v치lido.";
        formIsValid = false;
      }
      email.addEventListener("input", function () {
        document.getElementById("email-error").textContent = ""; // Limpiar mensaje de error al escribir
      })

      // Validar empresa
      if (company.value.trim() === "") {
        document.getElementById("company-error").textContent =
          t.errorCompany || "Por favor, ingresa tu empresa.";
        formIsValid = false;
      }
      company.addEventListener("input", function () {
        document.getElementById("company-error").textContent = ""; // Limpiar mensaje de error al escribir
      })

      // Validar cargo
      if (position.value.trim() === "") {
        document.getElementById("position-error").textContent =
          t.errorPosition || "Por favor, ingresa tu cargo.";
        formIsValid = false;
      }
      position.addEventListener("input", function () {
        document.getElementById("position-error").textContent = ""; // Limpiar mensaje de error al escribir
      })

      // Validar pa칤s
      if (country.value.trim() === "") {
        document.getElementById("country-error").textContent =
          t.errorCountry || "Por favor, ingresa tu pa칤s.";
        formIsValid = false;
      }
      country.addEventListener("input", function () {
        document.getElementById("country-error").textContent = ""; // Limpiar mensaje de error al escribir
      })

      // Validar ciudad
      if (city.value.trim() === "") {
        document.getElementById("city-error").textContent =
          t.errorCity || "Por favor, ingresa tu pa칤s.";
        formIsValid = false;
      }
      city.addEventListener("input", function () {
        document.getElementById("city-error").textContent = ""; // Limpiar mensaje de error al escribir
      })

      // Validar mensaje
      if (message.value.trim() === "") {
        document.getElementById("message-error").textContent =
          t.errorMessage || "El mensaje es obligatorio.";
        formIsValid = false;
      }
      message.addEventListener("input", function () {
        document.getElementById("message-error").textContent = ""; // Limpiar mensaje de error al escribir
      })


      // Si el formulario es v치lido, enviarlo
