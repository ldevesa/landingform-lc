          }

          if (result.success) {
            mostrarAlerta(t.success, 'success');
            // Vaciar los campos del formulario
            document.getElementById("contact-form").reset();
          } else {
            mostrarAlerta(t.serverError + result.message, 'error');
          }
        } catch (error) {
          console.error("Error al enviar el formulario:", error);
          mostrarAlerta(t.catchError, 'error');
        } finally {
